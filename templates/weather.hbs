<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    {{>cssLink}}
</head>
<body>
    {{>navbar}}
   <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="main_content">
            <form class="temp_form">
                <input type="text" name="cityName" placeholder="Enter the city name" autocomplete="off" id="cityName">
                <input type="submit" value="search" id="submitBtn">
            </form>
              </div>
          <div class="tempInformation">
            <div class="top_layer">
                <p id="day">Wednesday</p>
                <p id="today_date">11 Jan</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get output here</p>
                <div class="middle_layer">
                    <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
            </div>
          </div>
            </div>
          </div>
        </div>
     
     {{>footer}}
     <script src="js/main.js"></script>
     <script>
      const weekday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
      const d = new Date();
      let day = weekday[d.getDay()];
      const dayy=document.getElementById("day");
      dayy.innerText=day;
      const date=d.getDate();
      const datte=document.getElementById("today_date");
      var month = d.toLocaleString('default', { month: 'short' });
      console.log(month);
      datte.innerText=`${date} ${month}`
     </script>
</body>
</html>